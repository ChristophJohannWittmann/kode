{
    "title": "Server Configuration",
    "description": "A GUI-based application for editing \"config.json\" files.",
    "container": "configurationEditor",
    "client": [
    ],
    "server": [
    ],
    "schemas": [
        "/Users/christoph/Desktop/testModule/testSchema.js",
        "/Users/christoph/Desktop/testModule/testSchema2.js"
    ],
    "databases": {
        "@": [
            "##FRAMEWORK"
        ],
        "@test": [
            "#testSchema",
            "#testSchema2"
        ]
    },
    "references": [
        { "url": "/CLIENTFRAMEWORK.js", "class": "ClientFramework" }
    ],
    "configuration": {
        "active": {
            "require": true,
            "type": "boolean"
        },
        "dbms": {
            "require": true,
            "type": "string"
        },
        "references" : {
            "require": true,
            "type": "array",
            "element": {
                "url": {
                    "required": true,
                    "type": "string"
                },
                "class": {
                    "required": false,
                    "type": "string"
                },
                "path": {
                    "required": false,
                    "type": "text"
                },
                "css": {
                    "required": false,
                    "type": "text"
                },
                "panel": {
                    "required": false,
                    "type": "text"
                },
                "favicons": {
                    "required": false,
                    "type": "array",
                    "element": {
                        "type": "string",
                        "href": "string"
                    }
                },
                "websocket": {
                    "required": true,
                    "type": "boolean"
                },
                "authenticate": {
                    "required": true,
                    "type": "boolean"
                }
            }
        }
    }
}
